block content
  div
    p #{session}
    form(action='/api/v1/users',method='post')
      label(for='name') Name
        input(id='name',type='text',value='#{data ? data.name : ""}',placeholder='Name',name='name')
      br  
      br
      label(for='email') Email
        input(id='email',type='text',value='#{data ? data.email : ""}',placeholder='Email',name='email')
      br
      br   
      label(for='password') Password
        input(id='password',type='text',value='',placeholder='Password',name='password')
      br
      br  
      input(type='submit',value='Sign Up')      